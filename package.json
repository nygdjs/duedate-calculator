{
    "name": "duedate-calculator",
    "version": "1.0.0",
    "description": "Due Date Calculator",
    "main": "index.js",
    "private": true,
    "license": "UNLICENSED",
    "author": "hello@norbert-toth.me",
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Edge versions",
        "last 2 Safari versions",
        "last 2 iOS major versions",
        "last 2 ChromeAndroid versions"
    ],
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "lint-staged": {
        "*.{js,mjs}": "eslint --fix"
    },
    "scripts": {
        "cleanup": "rm yarn.lock; rm package-lock.json; rm -rf node_modules",
        "lint:js": "eslint --fix --ext .mjs.js ./**/",
        "reboot": "npm run cleanup; npm install",
        "start": "browser-sync start --server --files './'",
        "test": "jest"
    },
    "dependencies": {},
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.5",
        "babel-jest": "^23.2.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
        "browser-sync": "^2.24.5",
        "eslint": "^5.0.1",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-plugin-compat": "^2.4.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.0",
        "eslint-plugin-react": "^7.10.0",
        "eslint-plugin-unicorn": "^4.0.3",
        "husky": "^0.14.3",
        "jest": "^23.3.0",
        "lint-staged": "^7.2.0",
        "regenerator-runtime": "^0.12.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nygdjs/duedate-calculator"
    }
}
