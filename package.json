{
    "name": "duedate-calculator",
    "version": "1.0.0",
    "description": "Due Date Calculator",
    "main": "index.js",
    "private": true,
    "license": "UNLICENSED",
    "author": "hello@norbert-toth.me",
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 Firefox versions",
        "last 2 Edge versions",
        "last 2 Safari versions",
        "last 2 iOS major versions",
        "last 2 ChromeAndroid versions"
    ],
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "lint-staged": {
        "*.{png,jpeg,jpg,gif,svg}": "imagemin-lint-staged",
        "*.{css,scss}": "stylelint",
        "*.{js,jsx}": [
            "eslint --fix",
            "stylelint"
        ]
    },
    "scripts": {
        "lint:js": "eslint --fix --ext .jsx,.js ./**/",
        "lint:css": "stylelint './**/*.jsx'",
        "cleanup": "rm yarn.lock; rm package-lock.json; rm -rf node_modules",
        "reboot": "npm run cleanup; npm install --production=false"
    },
    "dependencies": {},
    "devDependencies": {
        "babel-eslint": "^8.2.5",
        "eslint-config-airbnb": "^17.0.0",
        "eslint-plugin-compat": "^2.4.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.0",
        "eslint-plugin-react": "^7.10.0",
        "eslint-plugin-unicorn": "^4.0.3",
        "eslint": "^5.0.1",
        "husky": "^0.14.3",
        "imagemin-lint-staged": "^0.3.0",
        "lint-staged": "^7.2.0",
        "stylelint-config-standard": "^18.2.0",
        "stylelint-no-unsupported-browser-features": "^3.0.0",
        "stylelint-order": "^0.8.1",
        "stylelint": "^9.3.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nygdjs/duedate-calculator"
    }
}
